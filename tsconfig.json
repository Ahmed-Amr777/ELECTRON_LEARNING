{
  "compilerOptions": {
    // File layout
    "rootDir": "src",
    "outDir": "dist",

    // Environment settings
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],

    // Typechecking options
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Output options
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // JSX (optional if using React)
    "jsx": "react-jsx",

    // Module handling
    "isolatedModules": true,
    "moduleDetection": "force"
  }
}
